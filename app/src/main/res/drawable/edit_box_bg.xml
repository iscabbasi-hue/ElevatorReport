<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- رنگ داخل باکس -->
    <solid android:color="#E3F2FD" />

    <!-- گوشه‌های نرم -->
    <corners android:radius="8dp" />

    <!-- حاشیه ملایم -->
    <stroke
        android:width="1dp"
        android:color="#64B5F6" />

    <!-- فاصله متن از دیواره -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>