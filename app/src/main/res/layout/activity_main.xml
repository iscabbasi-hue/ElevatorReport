<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="#F2F2F2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/arm3"
        android:scaleType="fitCenter"
        android:layout_gravity="top|left"
        android:layout_margin="12dp"
        android:alpha="0.3"
        />


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اعلام خطا و گزارش رفع اشکال\nآسانسور بلوک ۲ و ۳\nمجتمع مسکونی مهستان"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:gravity="right"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کد خطای بورد در هنگام مراجعه"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1E3A8A"
            android:gravity="right"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="4dp" />


        <EditText
            android:id="@+id/etErrorCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="XX"
            android:inputType="number"
            android:gravity="left"
            android:maxLength="2"
            android:textStyle="bold"
            android:background="@drawable/edit_box_bg" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مشکل ظاهری"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1E3A8A"
            android:gravity="right"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etVisualProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"

            android:layout_marginTop="4dp"
            android:background="@drawable/edit_box_bg"
            android:gravity="top"
            android:textStyle="bold"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اقدامات انجام شده"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1E3A8A"
            android:gravity="right"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:background="@drawable/edit_box_bg"
            android:gravity="top"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="قطعات تعویضی"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#1E3A8A"
            android:gravity="right"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etParts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:background="@drawable/edit_box_bg" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ارسال گزارش"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="انصراف"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnShowReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نمایش گزارش‌ها"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>





    </LinearLayout>

</ScrollView>
</FrameLayout>